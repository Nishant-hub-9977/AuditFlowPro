{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  "baseUrl": ".",
  "types": ["node", "express", "vite/client"],
    "outDir": "dist",
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "api/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"]
}
